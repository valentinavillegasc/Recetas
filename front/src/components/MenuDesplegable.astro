---
const categories = ["Entrantes", "Platos Principales", "Postres"];
---

<style>
  .dropdown {
    position: relative;
    display: inline-block;
   
  }
  .dropbtn{
    color: white;
    font-size: 2.25rem;
    line-height: 2.5rem;

  }

  .dropdown-content {
    display: none;
    position: absolute;
   
    background-color: #E3ECD3;
    min-width: 160px;
    box-shadow: 0px 8px 16px 0px rgba(0,0,0,0.2);
    z-index: 1;
  }

  .dropdown-content a {
    color: black;
    padding: 12px 16px;
    text-decoration: none;
    display: block;
  }

  .dropdown-content a:hover {
    background-color: #f1f1f1;
  }

  .dropdown:hover .dropdown-content {
    display: block;
  }

 
</style>

<div class="dropdown">
  <button class="dropbtn">Categor√≠as</button>
  <div class="dropdown-content">
    {categories.map(category => (
      <a href={`#${category.toLowerCase()}`}>{category}</a>
    ))}
  </div>
</div>
